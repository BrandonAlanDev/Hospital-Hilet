<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="DataGridColumnHeader" x:Key="HeaderGrilla">
        <Setter Property="Background" Value="#4F709C" />
        <Setter Property="Foreground" Value="#F0F0F0" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderThickness" Value="0.5,1,0.5,2" />
        <Setter Property="BorderBrush" Value="White" />
    </Style>

    <Style x:Key="CeldaSeleccionada" TargetType="DataGridCell">
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#F0F0F0" />
                <Setter Property="Foreground" Value="#4F709C" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>