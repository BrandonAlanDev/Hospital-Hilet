<Page x:Class="MaquetaParaFinal.View.Pacientes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaquetaParaFinal.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Pacientes">

    <Grid x:Name="Principal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <DockPanel x:Name="Body" Background="Pink" >

            <Grid x:Name="MenuPaciente">

                <Grid x:Name="GridData" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,225,0" >
                    <DataGrid x:Name="DataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#213555"
                              RowBackground="#213555" Foreground="#F0F0F0" AutoGenerateColumns="True" BorderBrush="#F0F0F0">
                        <DataGrid.ColumnHeaderStyle>
                            <StaticResource ResourceKey="HeaderGrilla" />
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </Grid>

                <Grid x:Name="Botones" Width="225" HorizontalAlignment="Right" Background="#4F709C">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,10,0,60">
                        <Label Content="ID del paciente" FontFamily="Roboto" FontWeight="Medium" FontSize="12" Foreground="#F0F0F0"/>
                        <Border CornerRadius="7" Background="#213555" BorderBrush="#F0F0F0" BorderThickness="2" Margin="0,0,0,10" >
                            <TextBox Margin="10,2,10,2" Background="Transparent" BorderBrush="Transparent" IsEnabled="False"/>
                        </Border>
                        <Label Content="Nombre del paciente" FontFamily="Roboto" FontWeight="Medium" FontSize="12" Foreground="#F0F0F0"/>
                        <Border CornerRadius="7" Background="#213555" BorderBrush="#F0F0F0" BorderThickness="2" Margin="0,0,0,10" >
                            <TextBox Margin="10,2,10,2" Background="Transparent" BorderBrush="Transparent" IsEnabled="False"/>
                        </Border>
                        <Label Content="DNI del paciente" FontFamily="Roboto" FontWeight="Medium" FontSize="12" Foreground="#F0F0F0"/>
                        <Border CornerRadius="7" Background="#213555" BorderBrush="#F0F0F0" BorderThickness="2" Margin="0,0,0,10" >
                            <TextBox Margin="10,2,10,2" Background="Transparent" BorderBrush="Transparent" IsEnabled="False"/>
                        </Border>
                        <Label Content="Fecha de Nacimiento" FontFamily="Roboto" FontWeight="Medium" FontSize="12" Foreground="#F0F0F0"/>
                        <Border CornerRadius="7" Background="#213555" BorderBrush="#F0F0F0" BorderThickness="2" Margin="0,0,0,10" >
                            <TextBox Margin="10,2,10,2" Background="Transparent" BorderBrush="Transparent" IsEnabled="False"/>
                        </Border>
                        <Label Content="Direccion" FontFamily="Roboto" FontWeight="Medium" FontSize="12" Foreground="#F0F0F0"/>
                        <Border CornerRadius="7" Background="#213555" BorderBrush="#F0F0F0" BorderThickness="2" Margin="0,0,0,10" >
                            <TextBox Margin="10,2,10,2" Background="Transparent" BorderBrush="Transparent" IsEnabled="False"/>
                        </Border>
                        <Label Content="E-Mail" FontFamily="Roboto" FontWeight="Medium" FontSize="12" Foreground="#F0F0F0"/>
                        <Border CornerRadius="7" Background="#213555" BorderBrush="#F0F0F0" BorderThickness="2" Margin="0,0,0,10" >
                            <TextBox Margin="10,2,10,2" Background="Transparent" BorderBrush="Transparent" IsEnabled="False"/>
                        </Border>
                    </StackPanel>
                    <Button x:Name="btnAltaPaciente" Content="Alta" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,130,50" Height="30" Width="70" Style="{StaticResource BotonPrimario}" />
                    <Button x:Name="btnModificarPaciente" Content="Modificar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,50" Height="30" Width="100" Style="{StaticResource BotonPrimario}" IsEnabled="False"/>
                    <Button x:Name="btnBajaPaciente" Content="Baja" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,130,10" Height="30" Width="70" Style="{StaticResource BotonSalir}" IsEnabled="False" />
                    <Button x:Name="btnImprimirPaciente" Content="Imprimir Datos" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,10" Height="30" Width="100" Style="{StaticResource BotonPrimario}" IsEnabled="False"/>
                </Grid>
            </Grid>


        </DockPanel>

    </Grid>
</Page>
