<Page x:Class="MaquetaParaFinal.View.Pacientes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaquetaParaFinal.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Pacientes">

    <Grid x:Name="Principal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <DockPanel x:Name="Body" Background="Pink" >
            <Grid x:Name="MenuPaciente">
                <Grid Background="#213555" Margin="0,0,225,0" >
                    <Label Content="Buscar" Foreground="#F0F0F0" FontFamily="Roboto" FontSize="15"/>
                    <TextBox x:Name="txtBuscar" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,6,0,0" TextWrapping="Wrap" Text="" Width="120"/>
                    <Button x:Name="btAceptarBusqueda" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="200,5,0,0" Content="Buscar" Height="20" Width="62" Click="BuscarButton_Click" Style="{StaticResource BotonSecundario}"/>
                </Grid>
                <Grid x:Name="GridData" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,30,225,0" >
                    <DataGrid x:Name="DataGridPacientes" d:ItemsSource="{d:SampleData ItemCount=5}" ColumnWidth="*" IsReadOnly="True" SelectionChanged="DataGridPacientes_SelectionChanged" Loaded="DataGridPacientes_Loaded" AutoGeneratingColumn="DataGridPacientes_AutoGeneratingColumn" Background="#213555"
                              RowBackground="#213555" Foreground="#F0F0F0" AutoGenerateColumns="True" BorderBrush="#F0F0F0" RowHeight="25" VerticalContentAlignment="Center" >
                        <DataGrid.ColumnHeaderStyle>
                            <StaticResource ResourceKey="HeaderGrilla" />
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </Grid>

                <Grid x:Name="Botones" Width="225" HorizontalAlignment="Right" Background="#4F709C">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="225" Margin="0,10,0,60">
                        <StackPanel x:Name="TxtBoxes" IsEnabled="False" Width="225" HorizontalAlignment="Left" Background="Transparent">
                            <DockPanel>
                                <Label Content="Nombre" Margin="0,3,0,0" FontWeight="Medium" FontFamily="Roboto" Foreground="#F0F0F0"/>
                                <TextBox x:Name="txtNombre" HorizontalAlignment="Right" Width="130" Margin="0,6,10,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content="Apellido" Margin="0,3,0,0" FontWeight="Medium" FontFamily="Roboto" Foreground="#F0F0F0"/>
                                <TextBox x:Name="txtApellido" HorizontalAlignment="Right" Width="130" Margin="0,6,10,0" TextWrapping="Wrap" Text="Apellido" VerticalAlignment="Top"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content="DNI" Margin="0,3,0,0" FontWeight="Medium" FontFamily="Roboto" Foreground="#F0F0F0"/>
                                <TextBox x:Name="txtDni" HorizontalAlignment="Right" Width="130" Margin="0,6,10,0" TextWrapping="Wrap" Text="Dni" VerticalAlignment="Top"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content="Email" Margin="0,3,0,0" FontWeight="Medium" FontFamily="Roboto" Foreground="#F0F0F0"/>
                                <TextBox x:Name="txtEmail" HorizontalAlignment="Right" Width="130" Margin="0,6,10,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content="Nacimiento" Margin="0,3,0,0" FontWeight="Medium" FontFamily="Roboto" Foreground="#F0F0F0"/>
                                <TextBox x:Name="txtFecha_De_Nacimiento"  HorizontalAlignment="Right" Width="130" Margin="0,6,10,0" TextWrapping="Wrap" Text="Fecha De Nacimiento" VerticalAlignment="Top"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content="Teléfono" Margin="0,3,0,0" FontWeight="Medium" FontFamily="Roboto" Foreground="#F0F0F0"/>
                                <TextBox x:Name="txtTelefono" HorizontalAlignment="Right" Width="130" Margin="0,6,10,0" TextWrapping="Wrap" Text="Telefono" VerticalAlignment="Top"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content="Calle" Margin="0,3,0,0" FontWeight="Medium" FontFamily="Roboto" Foreground="#F0F0F0"/>
                                <TextBox x:Name="txtCalle" HorizontalAlignment="Right" Width="130" Margin="0,6,10,0" TextWrapping="Wrap" Text="Calle" VerticalAlignment="Top" />
                            </DockPanel>
                            <DockPanel>
                                <Label Content="Numero" Margin="0,3,0,0" FontWeight="Medium" FontFamily="Roboto" Foreground="#F0F0F0"/>
                                <TextBox x:Name="txtNro" HorizontalAlignment="Right" Width="130" Margin="0,6,10,0" TextWrapping="Wrap" Text="Nro" VerticalAlignment="Top"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content="Piso" Margin="0,3,0,0" FontWeight="Medium" FontFamily="Roboto" Foreground="#F0F0F0"/>
                                <TextBox x:Name="txtPiso" HorizontalAlignment="Right" Width="130" Margin="0,6,10,0" TextWrapping="Wrap" Text="Piso" VerticalAlignment="Top"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content="Localidad" Margin="0,3,0,0" FontWeight="Medium" FontFamily="Roboto" Foreground="#F0F0F0"/>
                                <TextBox x:Name="txtLocalidad" HorizontalAlignment="Right" Width="130" Margin="0,6,10,0" TextWrapping="Wrap" Text="Localidad" VerticalAlignment="Top"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content="Codigo Postal" Margin="0,3,0,0" FontWeight="Medium" FontFamily="Roboto" Foreground="#F0F0F0"/>
                                <TextBox x:Name="txtCodPostas" HorizontalAlignment="Right" Width="130" Margin="0,6,10,0" TextWrapping="Wrap" Text="Codigo Postal" VerticalAlignment="Top"/>
                            </DockPanel>
                            <DockPanel x:Name="BotonesAceptar_Canlar" VerticalAlignment="Bottom" Margin="0,30">
                                <Button x:Name="btAceptar" Content="Aceptar" Margin="5" Width="62" Click="btAceptar_Click"/>
                                <Button x:Name="btCancelar" Content="Cancelar" Margin="5" Width="62" Click="btCancelar_Click"/>
                            </DockPanel>
                        </StackPanel>
                    </StackPanel>
                    <Button x:Name="btAgregar" Content="+ Alta" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,130,50" Height="30" Width="70" Style="{StaticResource BotonPrimario}" />
                    <Button x:Name="btModificar" Content="Modificar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,50" Height="30" Width="100" Style="{StaticResource BotonSecundario}" IsEnabled="False"/>
                    <Button x:Name="btEliminar" Content="- Baja" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,130,10" Height="30" Width="70" Style="{StaticResource BotonSalir}" IsEnabled="False" />
                    <Button x:Name="btnImprimirPaciente" Content="Imprimir Datos" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,10" Height="30" Width="100" Style="{StaticResource BotonSecundario}" IsEnabled="False"/>
                </Grid>
            </Grid>


        </DockPanel>

    </Grid>
</Page>
