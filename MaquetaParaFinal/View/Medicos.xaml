<Page x:Class="MaquetaParaFinal.View.Medicos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaquetaParaFinal.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Medicos">

    <Grid x:Name="Principal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <DockPanel x:Name="Body" Background="Pink" >

            <Grid x:Name="MenuMedicos">
                <Grid Width="125" Background="#4F709C" HorizontalAlignment="Left">
                    <StackPanel>

                    </StackPanel>
                </Grid>

                <Grid x:Name="GridData" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="125,0,149,0">
                    <DataGrid x:Name="DataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged"/>
                </Grid>

                <Grid x:Name="Botones" Width="150" HorizontalAlignment="Right" Background="#FFFFFF">
                    <Button Content="Button" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Height="91" Width="100"/>

                </Grid>
            </Grid>


        </DockPanel>

    </Grid>
</Page>
